@using TartalomGyakorlas.Models
@using System.Collections.Generic

@model List<BevetelEsKiadas>



<div>
    @Html.ActionLink("Új bevétel felvitele", "UjFelvitel", new { id = 0 }, new { @class = "btn btn-default"})
    @Html.ActionLink("Új kiadás felvitele", "UjFelvitel", new { id = 1 }, new { @class = "btn btn-default" })
</div>


        <table class="table">
            <thead>
                <tr>
                    <th>Tétel</th>
                    <th>Bevétel</th>
                    <th>Kiadás</th>
                </tr>
            </thead>

            <tbody>
                @{ int osszbevetel = 0;}
                @{ int osszkiadas = 0;}
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.IncomeItemID</td>
                        @if (t.IsBevetel)
                {
                            <td>@t.Value</td>
                            <td></td>
                            osszbevetel = osszbevetel + t.Value;
                        }
                        else
                        {
                            <td></td>
                            <td>@t.Value</td>
                            osszkiadas = osszkiadas + t.Value;
                        }

                    </tr>
                }
                <tr>
                    <td>Összesen</td>
                    <td>@osszbevetel</td>
                    <td>@osszkiadas</td>
                </tr>
            </tbody>
        </table>

