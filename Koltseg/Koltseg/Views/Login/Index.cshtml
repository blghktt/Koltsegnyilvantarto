@using Koltseg.Models
@model User

@{
    ViewBag.Title = "Index";
}

<h2>Bejelentkezés</h2>

@*Actiont, Controllert, getes vagy postos, attibútumok*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(e => e.UserName)
        @Html.TextBoxFor(e => e.UserName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Password)
        @Html.PasswordFor(e => e.Password, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Bejelentkezés</button>
}

